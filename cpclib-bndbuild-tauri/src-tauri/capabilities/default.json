{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open",
    "dialog:allow-message",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "dot",
          "args": [
            "-Kdot",
            "-Tsvg"
          ],
          "sidecar": false
        }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-open",
    "shell:default",
    "log:default"
  ]
}